@page
@model ProfileModel
@{
    ViewData["Title"] = "Profile";
}

<h4>@ViewData["Title"]</h4>
@Html.Partial("_StatusMessage", Model.StatusMessage)
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username"></label>
                <p>@Model.CurrentUser.UserName</p>
            </div>

            <div class="form-group">
                <label asp-for="Output.Points"></label>
                <p>@Model.CurrentUser.Points</p>
            </div>
            <div>
                <label asp-for="CurrentUser.ShoePicsList">@Model.CurrentUser.UserName's bilder</label>
                @foreach (var item in Model.CurrentUser.ShoePicsList)
                {
                    <div class="gallery">
                        <a asp-area="" asp-action="">
                            <img src="@item.ImageSource" />
                        </a>
                    </div>
                }
            </div>
        </form>
    </div>
