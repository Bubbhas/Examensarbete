@page
@model ProfileModel
@{
    ViewData["Title"] = "Profil";
}

@Html.Partial("_StatusMessage", Model.StatusMessage)
<div class="container">

    <div class="row profile-top-row">
        <div class="col-md-3">
            <div class="profile-header-container">
                <img class="img-circle" src="~/images/blank-profile-picture-973461_640.png" />
                @*<img class="img-circle" src="@Model.ProfilePicture" />*@
                <div class="rank-label-container">
                    <span class="label label-default rank-label ">@Model.CurrentUser.Points poäng</span>
                </div>
            </div>
            <div class="form-group">
                <h4><b>Användarnamn: </b></h4>
                <p>@Model.CurrentUser.UserName</p>
            </div>
            <div class="form-group">
                <h4><b>Antal kommentarer:</b></h4>
                @if (Model.CurrentUser.Comments != null)
                {
                    <p>@Model.CurrentUser.Comments.Count()</p>

                }
                else
                {
                    <p>0</p>
                }
            </div>
        </div>
        <div class="col-md-9">
            <form id="profile-form">


                <div>
                    <h2><b>Uppladdade bilder</b></h2>
                    <div class="d-flex justify-content-between align-items-center">
                        @foreach (var item in Model.CurrentUser.ShoePicsList)
                        {
                            <a asp-controller="ShoePic" asp-action="ShoePicWithComments" asp-route-id="@item.Id">
                                <img class="thumbnail-mini" src="~/@item.ImageSource" />
                            </a>
                        }
                        <div class="btn-group">
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>