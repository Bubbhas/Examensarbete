@using Microsoft.AspNetCore.Identity

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{



    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">

            <li>
                <a asp-area="Identity" asp-page="/Account/Manage/Profile" title="Manage">Konto</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Logga ut</button>
            </li>
        </ul>
    </form>
    <div class="autocomplete form-inline nav navbar-nav navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <form asp-action="GetUserByUserName" asp-controller="UserProfile" autocomplete="off">
                    <input type="text" class="form-control typeahead border-primary" name="UserName" id="query" placeholder="Search..." data-provide="typeahead" autocomplete="off">
                </form>
            </li>
        </ul>
    </div>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>
            <div class="autocomplete form-inline">
                <form asp-action="GetUserByUserName" asp-controller="UserProfile" autocomplete="off">
                    <input type="text" class="form-control typeahead border-primary" name="UserName" id="query" placeholder="Search..." data-provide="typeahead" autocomplete="off">
                </form>
            </div>
        </li>
        <li><a asp-area="Identity" asp-page="/Account/Register">Registrera</a></li>
        <li><a asp-area="Identity" asp-page="/Account/Login">Logga in</a></li>
    </ul>
}